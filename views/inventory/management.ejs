<!-- **************
*   Management View
*************** -->
<% if (title) { %>
  <h1><%= title %></h1>
  <% } else { res.redirect('/') } %> <% if (messages && messages.notice) { %>
  <p class="flash-message"><%= messages.notice %></p>
  <% } %> <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  
  <div class="management-links">
    <a href="../inventory/add-classification.ejs">Add New Classification</a>
    <a href="../inventory/add-inventory.ejs">Add New Inventory</a>
  </div>
  
  <div id="inventory-management-menu">
    <h2>Manage Inventory</h2>
    <p>Select classification to view vehicles</p>
    <%- classificationSelect %>
  </div>
  
  <table id="inventoryDisplay"></table>
  <noscript>JavaScript must be enables to use this page.</noscript>
  
  <script src="../../public/js/inventory.js"></script>
  